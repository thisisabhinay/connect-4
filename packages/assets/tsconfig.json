{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // This ensures TypeScript recognizes image imports
    "typeRoots": ["./node_modules/@types", "./types"],
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
